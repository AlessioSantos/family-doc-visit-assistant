{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Intake",
  "type": "object",
  "required": [
    "patient",
    "visit",
    "timeline"
  ],
  "properties": {
    "patient": {
      "type": "object",
      "required": [
        "age_years"
      ],
      "properties": {
        "age_years": {
          "type": "number",
          "minimum": 0
        },
        "sex": {
          "type": "string",
          "enum": [
            "female",
            "male",
            "other",
            "unknown"
          ]
        }
      }
    },
    "visit": {
      "type": "object",
      "required": [
        "started_on_date",
        "chief_complaint_category"
      ],
      "properties": {
        "started_on_date": {
          "type": "string",
          "format": "date"
        },
        "chief_complaint_category": {
          "type": "string"
        }
      }
    },
    "timeline": {
      "type": "object",
      "required": [
        "events"
      ],
      "properties": {
        "events": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "date",
              "symptom_type",
              "change"
            ],
            "properties": {
              "date": {
                "type": "string",
                "format": "date"
              },
              "symptom_type": {
                "type": "string"
              },
              "change": {
                "type": "string",
                "enum": [
                  "appeared",
                  "worsened",
                  "improved",
                  "resolved"
                ]
              },
              "character": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "severity": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        }
      }
    }
  }
}